@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>SignalR Chat</title>
</head>
<body>
    <div id="inputForm">
        <input type="text" id="message" />
        <input type="button" id="sendBtn" value="Отправить" />
        <input type="button" id="createBtn" value="Создать" />
    </div>
    <div id="chatroom"></div>

    <script src="js/signalr.min.js"></script>
    <script>
        let hubUrl = 'http://localhost:51309/gamehub';

        const hubConnection = new signalR.HubConnectionBuilder()
            .withUrl(hubUrl)
            //.withTransport(Microsoft.AspNetCore.Sockets.TransportType.WebSockets)
            .configureLogging(signalR.LogLevel.Information)
            .build();

        hubConnection.on("Authorization", function (data) {

            let elem = document.createElement("p");
            elem.appendChild(document.createTextNode(data));
            let firstElem = document.getElementById("chatroom").firstChild;
            document.getElementById("chatroom").insertBefore(elem, firstElem);

        });
        hubConnection.on("CreateGame1", function (data) {

            let elem = document.createElement("p");
            elem.appendChild(document.createTextNode(data));
            let firstElem = document.getElementById("chatroom").firstChild;
            document.getElementById("chatroom").insertBefore(elem, firstElem);

        });

        document.getElementById("sendBtn").addEventListener("click", function (e) {
            let message = document.getElementById("message").value;
            hubConnection.invoke("Authorization", message);
        });
        document.getElementById("createBtn").addEventListener("click", function (e) {
            hubConnection.invoke("CreateGame1");
        });

        hubConnection.start();
    </script>
</body>
</html>
